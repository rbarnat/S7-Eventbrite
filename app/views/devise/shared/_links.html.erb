<%- if controller_name != 'sessions' %>
  <div class="actions mt-5">
    <%= link_to "Se connecter", new_session_path(resource_name), class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="actions mt-5">
    <%= link_to "S'inscrire", new_registration_path(resource_name), class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="actions mt-5">
    <%= link_to "Vous avez oublié votre mot de passe ?", new_password_path(resource_name), class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="actions mt-5">
    <%= link_to "Vous n'avez pas reçu les information de confirmation ?", new_confirmation_path(resource_name), class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="actions mt-5">
    <%= link_to "Vous n'avez pas reçu les information de débloquage ?", new_unlock_path(resource_name), class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="actions mt-5">
      <%= link_to "Se connecter en tant que #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
<% end %>
