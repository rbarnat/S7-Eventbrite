<div class="container">
  <h1 class="h1 mt-3 font-weight-normal text-center">Modifier mon profil</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for(@user, url: user_path(@user.id), html: { method: :put }) do |f| %>
        <small><%= render "devise/shared/error_messages", resource: @user %></small>

        <div class="form-group">
          <%= f.label :last_name, "Nom" %>
          <%= f.text_field :last_name, autocomplete: "last-name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :first_name, "Prénom" %>
          <%= f.text_field :first_name, autocomplete: "first-name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %>
          <%= f.text_field :description, autocomplete: "description", class: "form-control" %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Mettre à jour", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <br /><br /><br />
      <%= link_to "Retour", :back %>
    </div>
  </div>
</div>