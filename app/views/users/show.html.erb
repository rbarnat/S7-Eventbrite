<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1 class="text-center">Utilisateur <%= @user.first_name + " " + @user.last_name %> </h1>

<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar' %>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
<%end%>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <!-- Utilisateur -->
      <div class="container mb-2">
        <div class="card mb-4 box-shadow">
          <!--<img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">-->
          <div class="card-body">
            <small class="text-muted">#<%= @user.id %></small>
            <h3 class="card-title"><%= @user.first_name + " " + @user.last_name %></h3>
            <h5 class="card-title"><%= @user.email%></h5>
            <p class="card-text"><%= @user.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <% if user_signed_in? && @user.id == current_user.id %>
                  <a href="<%= edit_user_registration_path(@user.id) %>" class="btn btn-sm btn-outline-secondary">Modifier</a>
                  <!--<a href="<%= edit_user_path(@user.id) %>" class="btn btn-sm btn-outline-secondary">Modifier mon profil</a>-->
                  <a href="<%= user_path(@user.id) %>" class="btn btn-sm btn-danger" data-confirm="Etes-vous sur de vouloir supprimer l'utilisateur ?" data-method="DELETE">Supprimer</a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Events de l'utilisateur -->
      <div class="col-md-8 mb-4">
        <h4 class="mb-2">
          Events créés par l'utilisateur
        </h4>

        <% if @user.admin_events.count > 0 %>
          <% @user.admin_events.each do |event| %>
            <div class="card mb-2">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <medium ><%= event.title %></medium>
                  <a href="<%= event_path(event.id) %>" class="btn btn-sm btn-outline-secondary">Voir</a>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          Aucun event créé pour le moment.
        <% end %>
      </div>
      

    </div>

    <div class="text-left">
      <a href="<%= root_path %>" class="btn my-2 btn-outline-secondary">Retour à l'acceuil</a>
    </div>

  </div>


</div>