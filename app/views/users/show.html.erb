<h1 class="text-center">Utilisateur <%= @user.first_name + " " + @user.last_name %> </h1>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <!-- Utilisateur -->
      <div class="container mb-2">
        <div class="card mb-4 box-shadow">
          <!--<img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">-->
          <div class="card-body">
            <small class="text-muted">#<%= @user.id %></small>
            <h3 class="card-title"><%= @user.first_name + " " + @user.last_name %></h3>
            <h5 class="card-title"><%= @user.email%></h5>
            <p class="card-text"><%= @user.description %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <% if user_signed_in? && current_user.id == @user.id %>
                  <a href="<%= edit_user_path(@user.id) %>" class="btn btn-sm btn-outline-secondary">Modifier</a>
                  <a href="<%= user_path(@user.id) %>" class="btn btn-sm btn-danger" data-confirm="Etes-vous sur de vouloir supprimer l'utilisateur ?" data-method="DELETE">Supprimer</a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Events de l'utilisateur -->
      <div class="col-md-8 mb-4">
        <h4 class="mb-2">
          Events créés par l'utilisateur
        </h4>
        
      </div>
      

    </div>

    <div class="text-left">
      <a href="<%= root_path %>" class="btn my-2 btn-outline-secondary">Retour à l'acceuil</a>
    </div>

  </div>


</div>