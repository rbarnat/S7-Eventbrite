<div class="container">
  <h1 class="h1 mt-3 font-weight-normal text-center">Modifier mon event</h1>
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for(@event, url: event_path(@event.id), html: { method: :put }) do |f| %>
        <small><%= render "devise/shared/error_messages", resource: @event %></small>

        <div class="form-group">
          <%= f.label :title,"Titre" %>
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %>
          <%= f.text_field :description, autocomplete: "description", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :start_date, "Date de début" %>
          <%= f.datetime_field :start_date, autocomplete: "start-date", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :duration, "Durée " %><small><i>(en minutes, multiple de 5)</i></small>
          <%= f.number_field :duration, autocomplete: "duration", class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :price, "Prix " %><small><i>(en Euros)</i></small>
          <%= f.number_field :price, autocomplete: "price", class: "form-control" %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Mettre à jour", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
      <br /><br /><br />
      <h3 class="h3 mb-3 font-weight-normal">Supprimer l'event</h3>
      <%= button_to "Supprimer", event_path(@event.id), data: { confirm: "Etes-vous sûr de vouloir supprimer l'event ?" }, method: :delete, class: "btn btn-lg btn-danger btn-block" %>
      <br /><br /><br />
      <%= link_to "Retour", :back %>
    </div>
  </div>
</div>