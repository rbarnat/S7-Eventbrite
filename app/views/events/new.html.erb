<% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1 class="text-center">Création d'un event</h1>


<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">

      <div class="col-md-8">
        <div class="card mb-4 box-shadow align-items-center">
          <br><br>
          <%= form_tag url_for(action: 'create'), method: "post" do %>
            <%= label_tag 'Titre : ' %>
            <%= text_field_tag 'title', @event.title %>
            <br /> <br />
        
            <%= label_tag 'Description : ' %>
            <%= text_area_tag 'description', @event.description %>
            <br /> <br />

            <%= label_tag 'Date de début : ' %>
            <%= datetime_field_tag 'start_date', @event.start_date %>
            <br /> <br />

            <%= label_tag 'Durée (en minutes, multiple de 5) : ' %>
            <%= number_field_tag 'duration', @event.duration %>
            <br /> <br />

            <%= label_tag 'Prix (en Euros) : ' %>
            <%= number_field_tag 'price', @event.price %>
            <br /> <br />

            <%= label_tag 'Lieu : ' %>
            <%= text_field_tag 'location', @event.location %>
            <br /> <br />

        
            <%= submit_tag "Créer" %>
        
          <% end %>
          <br><br>
        </div>
      </div>

    </div>

    <div class="text-left">
      <a href="<%= root_path %>" class="btn my-2 btn-outline-secondary">Retour à l'acceuil</a>
    </div>

  </div>


</div>